{
  "compilerOptions": {
    "outDir": "./anki-jpdb.reader/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es2021",
    "allowJs": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "removeComments": true,
    "strictNullChecks": true,
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["src/shared/*"],
      "@styles/*": ["src/styles/*"],
    }
  },
  "include": ["src/**/*"],
}
