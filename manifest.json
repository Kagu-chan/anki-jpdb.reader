{
  "manifest_version": 3,
  "name": "AnkiJPDBreader",
  "version": "0.1",
  "description": "Mine from JPDB directly into Anki",
  "minimum_chrome_version": "116",
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_popup": "views/popup.html",
    "default_icon": {
      "16": "assets/16.png",
      "48": "assets/48.png",
      "128": "assets/128.png"
    }
  },
  "icons": {
    "16": "assets/16.png",
    "48": "assets/48.png",
    "128": "assets/128.png"
  },
  "permissions": ["tabs", "activeTab", "contextMenus", "scripting", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["foreground/global/toast.js"]
    },
    {
      "matches": ["*://*.nhk.or.jp/*"],
      "js": ["foreground/apps/nhk.or.jp.js"]
    },
    {
      "matches": ["*://*.crunchyroll.com/*"],
      "js": ["foreground/apps/crunchyroll.com.js"]
    }
  ],
  "host_permissions": [
    "*://reader.ttsu.app/*",
    "*://ttu-ebook.web.app/*",
    "*://anacreondjt.gitlab.io/texthooker.html",
    "*://learnjapanese.moe/texthooker.html",
    "*://kamwithk.github.io/exSTATic/tracker.html",
    "*://renji-xd.github.io/texthooker-ui/",
    "file:///*mokuro*.html",
    "*://ja.wikipedia.org/*",
    "*://ja.m.wikipedia.org/*",
    "*://app.readwok.com/*",
    "*://*.youtube.com/*",
    "*://*.netflix.com/*",
    "*://*.crunchyroll.com/*",
    "*://bunpro.jp/*",
    "*://*.nhk.or.jp/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "styles/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
