{
  "manifest_version": 3,
  "name": "AnkiJPDBreader",
  "version": "0.1",
  "description": "Mine from JPDB directly into Anki",
  "minimum_chrome_version": "116",
  "background": {
    "service_worker": "service-worker/service-worker.js"
  },
  "action": {
    "default_popup": "views/popup/popup.html",
    "default_icon": {
      "16": "assets/16.png",
      "48": "assets/48.png",
      "128": "assets/128.png"
    }
  },
  "icons": {
    "16": "assets/16.png",
    "48": "assets/48.png",
    "128": "assets/128.png"
  },
  "host_permissions": ["http://*/*", "https://*/*"],
  "permissions": ["tabs", "activeTab", "contextMenus", "scripting", "storage"]
}
